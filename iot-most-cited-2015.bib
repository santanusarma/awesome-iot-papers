@inproceedings{Wang2012,
title={A Comprehensive Ontology for Knowledge Representation in the Internet of Things},
author={Wei Wang; De, S.; Toenjes, R.; Reetz, E.; Moessner, K.},
address={Centre for Commun. Syst. Res., Univ. of Surrey, Guildford, UK},
booktitle = {Trust, Security and Privacy in Computing and Communications (TrustCom), 2012 IEEE 11th International Conference on},
