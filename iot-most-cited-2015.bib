author={Siming Yang; Yang Xu; Qingyi He},
address={Sch. of Comput. Sci. & Eng., Univ. of Electron. Sci. & Technol. of China, Chengdu, China},
booktitle = {Internet of Things (iThings/CPSCom), 2011 International Conference on and 4th International Conference on Cyber, Physical and Social Computing},
year={2011},
